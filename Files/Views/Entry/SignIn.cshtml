@model Files.ViewModels.EntryViewModels.SignInViewModel
@{
    ViewBag.Title = "Sign In";
}

<div class="entry-container">
    <h2>Sign In</h2>

    @using (@Html.BeginForm())
    {
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.Password("Password", "", new {placeholder = "Password", @class = "form-control"})
            <p class="help-block">You'll be signed in for @FormsAuthentication.Timeout.TotalMinutes minutes.</p>
        </div>

        @Html.AntiForgeryToken()
        
        <button type="submit" class="btn btn-default">Sign In</button>
    }
</div>